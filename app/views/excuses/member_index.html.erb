<h1>My Excuses</h1>
<p>Current Admin ID: <%= current_admin.member.id %></p>
<div id="myexcuses">
  <% Excuse.where(member_id: current_admin.member.id) do |excuse| %>
    <%= render excuse %>
    <p>
      <%= link_to "Show this excuse", excuse %>
    </p>
  <% end %>
</div>

